@model AdminWebPage.Models.Account

@{
    ViewData["Title"] = "Delete Account";
}

<h2 class="mb-4 text-danger">Delete Account</h2>

<div class="row justify-content-center">
    <div class="col-md-8">

        <div class="bg-white p-4 rounded-20 shadow-sm">

            <h5 class="mb-3 text-secondary">Personal Information</h5>

            <div class="row g-3 mb-4">
                <div class="col-md-4">
                    <label class="form-label">First Name</label>
                    <input class="form-control rounded-20" value="@Model.FName" readonly />
                </div>

                <div class="col-md-4">
                    <label class="form-label">Middle Name</label>
                    <input class="form-control rounded-20" value="@Model.MName" readonly />
                </div>

                <div class="col-md-4">
                    <label class="form-label">Last Name</label>
                    <input class="form-control rounded-20" value="@Model.LName" readonly />
                </div>
            </div>

            <h5 class="mb-3 text-secondary">Account Credentials</h5>

            <div class="row g-3 mb-4">
                <div class="col-md-6">
                    <label class="form-label">Username</label>
                    <input class="form-control rounded-20" value="@Model.Username" readonly />
                </div>

                <div class="col-md-6">
                    <label class="form-label">Password</label>
                    <input class="form-control rounded-20" value="@Model.Password" readonly />
                </div>
            </div>

            <h5 class="mb-3 text-secondary">Other Details</h5>

            <div class="row g-3 mb-4">
                <div class="col-md-6">
                    <label class="form-label">Email</label>
                    <input class="form-control rounded-20" value="@Model.Email" readonly />
                </div>

                <div class="col-md-6">
                    <label class="form-label">Role</label>
                    <input class="form-control rounded-20" value="@Model.Role" readonly />
                </div>
            </div>

            <div class="alert alert-danger mb-4" role="alert">
                Are you sure you want to delete this account? This action cannot be undone.
            </div>

            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Index"
                   class="btn btn-light rounded-20">
                    Cancel
                </a>

                <form asp-action="Delete" method="post" class="m-0">
                    <input type="hidden" asp-for="AccountID" />
                    <button type="submit" class="btn btn-danger rounded-20">
                        Delete Account
                    </button>
                </form>
            </div>

        </div>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
