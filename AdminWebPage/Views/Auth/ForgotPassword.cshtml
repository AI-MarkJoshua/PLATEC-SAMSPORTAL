@model AdminWebPage.Models.ForgotPasswordViewModel
@{
    Layout = "_LoginLayout";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />

<style>
    .btn-primary-custom {
        background-color: #181F49;
        color: white;
        font-size: 1.2rem;
        transition: background-color 0.3s ease;
    }
    .btn-primary-custom:hover {
        background-color: #292b38;
        color: white;
    }
    .btn-back {
        background-color: transparent;
        border: none;
        color: #181F49;
        font-size: 1rem;
        margin-bottom: 15px;
        cursor: pointer;
    }
    .btn-back:hover {
        text-decoration: underline;
    }
    .page-icon {
        font-size: 3rem;
        color: #181F49;
        margin-bottom: 15px;
    }

    /* Set fixed width for inputs and buttons */
    .form-container {
        width: 75%; /* Adjust width as needed */
        max-width: 400px; /* Optional max width */
    }

    .form-container input,
    .form-container button {
        width: 100%;
    }
</style>

<div class="d-flex justify-content-center align-items-center min-vh-100" style="background-color: rgba(255,255,255,0.2);">
    <div class="card shadow-lg overflow-hidden" style="width: 1230px; border-radius: 30px; border: 10px solid rgba(255,255,255,0.9); background-color: rgba(255,255,255,0.95);">
        <div class="row g-0" style="min-height: 700px;">

            <!-- LEFT PANEL -->
            <div class="col-md-6 position-relative"
                 style="background-image: url('/image/mkmbackground.jpg'); background-size: cover; background-position: center;">
                <div class="position-absolute top-0 start-0 p-4">
                    <img src="~/image/mkmlonglogo.png" alt="MKM Long Logo" style="max-width: 220px; height: auto;" />
                </div>
            </div>

            <!-- RIGHT PANEL -->
            <div class="col-md-6 p-5 d-flex flex-column">

                <!-- BACK BUTTON -->
                <a asp-action="Login" asp-controller="Auth" class="btn-back">
                    <i class="fa-solid fa-arrow-left"></i> Back to Login
                </a>

                <!-- CENTERED CONTENT -->
                <div class="d-flex flex-column justify-content-center align-items-center flex-grow-1">
                    <i class="fa-solid fa-envelope page-icon"></i>
                    <h2 class="fw-bold">Forgot Password</h2>
                    <p class="text-muted fs-5 text-center">Enter your registered email to receive a verification code.</p>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger text-center">@ViewBag.Error</div>
                    }

                    <form method="post" class="d-flex flex-column mt-4 form-container">
                        <div class="mb-3 text-start">
                            <label class="form-label fw-bold fs-5">Email</label>
                            <input name="email" class="form-control form-control-lg" placeholder="Enter your registered email" required />
                        </div>

                        <button type="submit" class="btn py-3 fw-bold btn-primary-custom mt-3">Send Verification Code</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
