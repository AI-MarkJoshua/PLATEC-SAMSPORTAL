@model AdminWebPage.Models.ForgotPasswordViewModel

<h3>Forgot Password</h3>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

@if (ViewBag.Success != null)
{
    <div class="alert alert-success">@ViewBag.Success</div>
}

<form method="post">
    <div class="mb-3">
        <label>Email</label>
        <input asp-for="Email" class="form-control" placeholder="Enter your registered email" />
    </div>

    <div class="mb-3">
        <label>Verification Code (check your email)</label>
        <input asp-for="VerificationCode" class="form-control" placeholder="Enter code here" />
    </div>

    <button class="btn btn-primary w-100">Submit</button>
</form>

